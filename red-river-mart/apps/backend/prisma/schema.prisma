generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Forum {
  id          Int       @id @default(autoincrement())
  subject     String
  title       String
  description String
  date        String
  authorId    String
  comments    Comment[]
  author      User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

model Comment {
  id      Int    @id @default(autoincrement())
  text    String
  userId  String
  forumId Int
  forum   Forum  @relation(fields: [forumId], references: [id], onDelete: Cascade)
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Item {
  id          Int     @id @default(autoincrement())
  name        String
  category    String
  price       Float
  description String
  src         String?
  sellerId    String
  seller      User    @relation(fields: [sellerId], references: [id], onDelete: Cascade)
}

model User {
  id               String    @id
  bio              String
  email            String
  phone            String
  preferredContact String
  profileImage     String?
  userName         String
  firstName        String?
  lastName         String?
  comments         Comment[]
  forums           Forum[]
  items            Item[]
}
