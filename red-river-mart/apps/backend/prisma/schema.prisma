model Forum {
  id          Int      @id @default(autoincrement())
  subject     String
  title       String
  description String
  date        String
}

model Item {
  id          Int      @id @default(autoincrement())
  name        String
  category    String
  price       Float
  description String
  src         String?
  
  sellerId    String
  seller      User     @relation(fields: [sellerId], references: [id], onDelete: Cascade)
}

model User {
  id               String  @id
  firstName        String?
  lastName         String?
  userName         String
  bio              String
  email            String
  phone            String
  preferredContact String
  profileImage     String?

  items            Item[]
}